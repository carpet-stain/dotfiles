# Refresh rate (lower is faster, default: 1)
delay=15

# Show CPU frequency & temperatures (if supported)
show_cpu_frequency=1
show_cpu_temperature=1

# Use detailed meters at the top
header_layout=two_50_50

# Enable tree view by default (process hierarchy)
tree_view=1
