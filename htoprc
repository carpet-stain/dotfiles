# Sort by CPU usage by default
sort_key=CPU
sort_direction=1

# Show program path instead of just the process name
show_program_path=1

# Hide kernel threads (to reduce clutter)
hide_kernel_threads=1

# Hide user threads (to simplify process list)
hide_userland_threads=1

# Highlight running tasks
highlight_base_name=1
highlight_megabytes=1
highlight_threads=1

# Enable readable memory sizes (MB/GB instead of KB)
show_memory_in_graphs=1

# Enable colors (if terminal supports it)
color_scheme=5  # Catppuccin-like: use 0-9 for different themes

# Use a clean display without unnecessary columns
show_cpu_count=1
show_cpu_graphs=1
show_cpu_percentage=1
show_memory_graphs=1
show_memory_percentage=1
