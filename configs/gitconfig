[include]
	path = local/user
	path = local/stuff
[push]
	default = current
	followTags = true
[branch]
	autosetuprebase = always
[merge]
	ff = only
	conflictstyle = diff3
[rebase]
	autoStash = true
[color]
	ui = auto
[alias]
	bclean = "!f() { git branch --merge ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
	bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
	fuck = "!f() { git reset HEAD --hard && git clean -dfx && git up && git bclean; }; f"
	lg = log --graph --pretty=fuller --decorate --color --show-signature
	ls = log --oneline --abbrev-commit --color
	up = pull --rebase --prune
	amend = commit --amend
[credential]
	helper = cache --socket ~/.cache/git-credential-cache/socket
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[diff]
    colorMoved = default
[core]
	excludesfiles = ~/.config/git/ignore
	autocrlf = input
	whitespace = cr-at-eol
	pager = less --tabs=4 -RFX
[pager]
	diff = delta
	status = true
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
	features = unobtrusive-line-numbers interactive decorations
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
	side-by-side = true
	hyperlinks = true
	true-color = always
[delta "unobtrusive-line-numbers"]
    line-numbers = true
    line-numbers-minus-style = "#444444"
    line-numbers-zero-style = "#444444"
    line-numbers-plus-style = "#444444"
    line-numbers-left-format = "{nm:>4}┊"
    line-numbers-right-format = "{np:>4}│"
    line-numbers-left-style = blue
    line-numbers-right-style = blue
[delta "interactive"]
    keep-plus-minus-markers = false
[delta "decorations"]
    commit-decoration-style = blue ol
    commit-style = raw
    file-style = omit
    hunk-header-decoration-style = blue box
    hunk-header-file-style = red
    hunk-header-line-number-style = "#067a00"
    hunk-header-style = file line-number syntax
[submodule]
	fetchJobs = 5
	recurse = true
[help]
	autocorrect = 5
[status]
	submoduleSummary = true
[user]
	email = brian.leppez@bytedance.com
	name = brian.leppez
	signingkey = 0x22483EA714C8FC1B
[pull]
	rebase = true
