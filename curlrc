# https://curl.haxx.se/docs/manpage.html

# Spoof a common Firefox User-Agent.
user-agent = "Mozilla/5.0 (Windows NT 10.0; rv:68.0) Gecko/20100101 Firefox/68.0"

# Fail if a connection can't be established within 10 seconds.
connect-timeout = 10

# Show a minimal, hash-based progress bar.
progress-bar

# Automatically set the Referer header when following redirects.
referer = ";auto"

# Attempt to save the remote file with the timestamp from the server.
remote-time

# Show an error message if curl fails.
show-error

# Fail silently (non-zero exit code) on server errors (4xx, 5xx).
# This is essential for scripting.
fail

# Follow HTTP 3xx redirects (like -L).
location