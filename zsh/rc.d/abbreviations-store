# Parenting changing perms on /
abbr chown="chown --preserve-root"

# Human file sizes
abbr df="df -h"
abbr dui="dua interactive"
abbr du="dua"

abbr dig="doggo"
abbr diff="delta"
abbr -g grep="rg"
abbr tmux="tmux -f $DOTFILES/tmux/tmux.conf"

# History suppression
abbr clear=' clear'
abbr pwd=' pwd'
abbr exit=' exit'

abbr mkdir='mkdir -pv'
abbr cp='cp -i --verbose'

# confirmation
abbr ln="ln -i"
abbr mv="mv -i"
abbr rm="rm -I --preserve-root=all"

# Make mount command output pretty and human readable format
abbr mount="mount | column -t"

abbr rsync="rsync --verbose --archive --human-readable --partial"
abbr tree="tree -a -I .git --dirsfirst"
abbr curl="curlie"
abbr find="fd"
